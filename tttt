import java.util.Date;
import java.util.GregorianCalendar;
import java.util.Random;

interface Porownaj<T> {
    int porównajDo(T inny);
}

abstract class Osoba {
    private String nazwa;

    public Osoba(String nazwa) {
        this.nazwa = nazwa;
    }

    public String getNazwa() {
        return nazwa;
    }

    public abstract String getInfo();
}

class Pracownik extends Osoba implements Porownaj<Pracownik> {
    private static int n;
    private int ni;

    private double pensja;
    private Date dzat;

    static {
        Random r = new Random();
        n = r.nextInt(11);
    }

    public Pracownik(String nazwa, double pensja, int rok, int miesiac, int dzien) {
        super(nazwa);
        this.pensja = pensja;
        this.ni = n++;
        GregorianCalendar kalendarz = new GregorianCalendar(rok, miesiac - 1, dzien);
        this.dzat = kalendarz.getTime();
    }

    public void premia(double procent) {
        if (procent >= 0) {
            pensja += pensja * procent / 100.0;
        }
    }

    @Override
    public int porównajDo(Pracownik inny) {
        return Double.compare(this.pensja, inny.pensja);
    }

    public int compareTo(Pracownik p) {
        return Double.compare(pensja, p.pensja);
    }

    @Override
    public String getInfo() {
        return String.format("Pracownik: %s, wypłata: %.2f zł (zatrudniony %s)",
                getNazwa(), pensja, dzat.toString());
    }

    public int getNi() { return ni; }
    public double getPensja() { return pensja; }
    public Date getDzat() { return dzat; }
}


public class Abstrakcja {

    public static void main(String[] args) {

        
        Student[] studenci = new Student[1];
        studenci[0] = new Student("Anna Nowak", "Informatyka");
        System.out.println("STUDENT:");
        System.out.println(studenci[0].getInfo());
        System.out.println();

       
        Pracownik[] wol = new Pracownik[3];

        wol[0] = new Pracownik("Jan", 1999.99, 2000, 1, 1);
        wol[1] = new Pracownik("Ali", 2000.01, 2000, 1, 1);
        wol[2] = new Pracownik("Ozy", 2000.00, 2000, 1, 1);

    
        wol[0].premia(10);

       

        System.out.println("PRACOWNICY:");
        for (Pracownik p : wol) {
            System.out.println("Nazwa: " + p.getNazwa());
            System.out.println("Pensja: " + p.getPensja() + " zł");
            System.out.println("Data zatrudnienia: " + p.getDzat());
            System.out.println("ID: " + p.getNi());
            System.out.println("---");
        }
    }
}




















class Student extends Osoba {
    private String specjalnosc;

    public Student(String nazwa, String specjalnosc) {
        super(nazwa);
        this.specjalnosc = specjalnosc;
    }

    @Override
    public String getInfo() {
        return String.format("Student: %s, specjalność: %s", getNazwa(), specjalnosc);
    }

    public String getSpecjalnosc() {
        return specjalnosc;
    }

    public void setSpecjalnosc(String nowaSpecjalnosc) {
        this.specjalnosc = nowaSpecjalnosc;
    }
}
